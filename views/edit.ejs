<% include ../views/partials/header %>

    <h1 class="text-center jumbotron">Todo App</h1>

    <div class="row">
        <form class="col-md-6 offset-md-3" method="post" action="/todo/edit/<%= todo._id %>">
            <div class="form-group row">
                <label for="todoName" class="col-4 col-form-label">Name Task</label>
                <div class="col-12">
                    <input name="text" value="<%= todo.text %>" placeholder="Enter Task Name ..." class="form-control" type="text"  id="todoName">
                </div>
                <label for="todoBody" class="col-4 col-form-label">Body Task</label>
                <div class="col-12">
                    <input class="form-control" name="body" value="<%= todo.body %>" type="text" placeholder="Enter Task Body ..." id="todoBody">
                </div>
                <div class="col-12">
                    <input class="btn btn-outline-warning form-control" type="submit" value="Edit"><br><br>
                    <a href="/" class="btn btn-outline-primary form-control">Cancel</a>
                </div>
            </div>
        </form>

    </div>
 <!-- ./row-->
<% include ../views/partials/footer %>