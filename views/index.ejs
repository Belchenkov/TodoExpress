<% include ../views/partials/header %>

    <h1 class="text-center jumbotron">Todo App</h1>

    <div class="row">
        <form class="col-md-6" method="post" action="todo/add">
            <div class="form-group row">
                <label for="todoName" class="col-4 col-form-label">Name Task</label>
                <div class="col-12">
                    <input name="todoName" placeholder="Enter Task Name ..." class="form-control" type="text"  id="todoName">
                </div>
                <label for="todoBody" class="col-4 col-form-label">Body Task</label>
                <div class="col-12">
                    <input class="form-control" name="todoBody" type="text" placeholder="Enter Task Body ..." id="todoBody">
                </div>
                <div class="col-12">
                    <input class="btn btn-outline-primary form-control" type="submit" value="Add">
                </div>
            </div>
        </form>

        <div class="col-md-6" id="tasks">
            <ul class="list-group">
                <li class="list-group-item active">Last Tasks</li>
                <% todos.forEach((todo) => { %>
                    <li class="list-group-item"><%= todo.text%> - <%= todo.body %></li>
                <%})%>
            </ul>
        </div>
    </div>
 <!-- ./row-->
<% include ../views/partials/footer %>